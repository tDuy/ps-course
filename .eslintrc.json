{
  "root": true,
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "plugins": ["react"],
  "rules": {
    "no-console": 1,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}
